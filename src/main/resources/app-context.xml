<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
        "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="mainFrame" class="Views.Windows.MainXMLFrame" init-method="init">
        <property name="contentPane">
            <ref bean="mainPanel"/>
        </property>
        <property name="title">
            <value>My List of Buddies</value>
        </property>
    </bean>
    <bean id="mainPanel" class="Views.BoxLayoutPanel" init-method="init">
        <property name="axis">
            <!--  "1" corresponds to BoxLayout.Y_AXIS -->
            <!--  Spring can access constants, but it's more complex -->
            <value>1</value>
        </property>
        <property name="panelComponents">
            <list>
                <ref bean="itemScrollPane"/>
                <ref bean="buttonPanel"/>
            </list>
        </property>
    </bean>
    <bean id="itemScrollPane" class="javax.swing.JScrollPane">
        <constructor-arg>
            <ref bean="itemTable"/>
        </constructor-arg>
    </bean>
    <bean id="itemTable" class="javax.swing.JTable">
        <property name="model">
            <ref bean="itemTableModel"/>
        </property>
    </bean>
    <bean id="itemTableModel" class="Views.ItemTableModel">
        <property name="itemList">
            <ref bean="itemList"/>
        </property>
    </bean>
    <bean id="itemList" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <value>Example Name, Example Phone Number</value>
            </list>
        </constructor-arg>
    </bean>
    <bean id="buttonPanel" class="Views.BoxLayoutPanel" init-method="init">
        <property name="axis">
            <!--  "0" corresponds to BoxLayout.X_AXIS -->
            <value>0</value>
        </property>
        <property name="panelComponents">
            <list>
                <ref bean="deleteButton"/>
                <ref bean="addNewButton"/>
            </list>
        </property>
    </bean>
    <bean id="deleteButton" class="Views.Button.ActionListenerButton" init-method="init">
        <property name="actionListener">
            <ref bean="deleteButtonActionListener"/>
        </property>
        <property name="text">
            <value>Delete</value>
        </property>
    </bean>
    <bean id="deleteButtonActionListener"
          class="Views.Button.DeleteButtonActionListener">
        <property name="list">
            <ref bean="itemList"/>
        </property>
        <property name="table">
            <ref bean="itemTable"/>
        </property>
    </bean>
    <bean id="addNewButton" class="Views.Button.ActionListenerButton" init-method="init">
        <property name="actionListener">
            <ref bean="addNewButtonActionListener"/>
        </property>
        <property name="text">
            <value>Add New</value>
        </property>
    </bean>
    <bean id="addNewButtonActionListener" class="Views.Button.AddNewButtonActionListener">
        <property name="list">
            <ref bean="itemList"/>
        </property>
        <property name="table">
            <ref bean="itemTable"/>
        </property>
    </bean>

    <bean id="addFrame" class="Views.Windows.AddXMLFrame" init-method="init">
        <property name="contentPane">
            <ref bean="mainPanel"/>
        </property>
        <property name="title">
            <value>Add a Buddy</value>
        </property>
    </bean>
    <bean id="addPanel" class="Views.BoxLayoutPanel" init-method="init">
        <property name="axis">
            <!--  "1" corresponds to BoxLayout.Y_AXIS -->
            <!--  Spring can access constants, but it's more complex -->
            <value>1</value>
        </property>
        <property name="panelComponents">
            <list>
                <ref bean="itemScrollPane"/>
                <ref bean="buttonPanel"/>
            </list>
        </property>
    </bean>
</beans>